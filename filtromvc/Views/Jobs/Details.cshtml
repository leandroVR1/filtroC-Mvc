@model Job
@{
    ViewData["Title"] = "Home Page";
}


<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="detallesTrabajoModalLabel">Detalles del trabajador</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                onclick="window.location.href='/Jobs'"></button>

        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-8"> 
                    <p><strong>Logo:</strong><img src="@Model.LogoCompany" alt="Job Logo"
                            style="max-width: 100px; max-height: 100px;" /></p>
                    <p><strong>Oferta:</strong>@Model.OfferTitle</p>
                    <p><strong>Nombre de la empresa:</strong>@Model.NameCompany</p>
                    <p><strong>Salario:</strong>@Model.Salary</p>
                    <p><strong>Posiciones:</strong>@Model.Positions</p>
                    <p><strong>Pais:</strong>@Model.Country</p>
                    <p><strong>Idiomas:</strong>@Model.Languages</p>
                    <p><strong>Descripcion:</strong>@Model.Description</p>

                  
                </div>
            </div>
         
        </div>
    </div>
</div>