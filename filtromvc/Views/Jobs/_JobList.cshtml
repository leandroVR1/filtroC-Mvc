@model List<Job>

<div class="content-page">
    <div class="content">
        <div class="container-fluid mt-4">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="table-responsive mt-4">
                        <table class="table table-hover table-striped">
                            <thead>
                            <tr class="bg-secondary text-white">
                            <<th scope="col">Id</th>
                            <th scope="col">Nombre de la empresa</th>
                            <th scope="col">Logo</th>
                            <th scope="col">Oferta</th>
                            <th scope="col">Descripcion</th>
                            <th scope="col">Salario</th>
                            <th scope="col">Posicion</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Pais</th>
                            <th scope="col">Lenguages</th>
                            <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                             
                                 @foreach (var job in Model)
                        {
                                                <tr>
                                                    <th scope="row">@job.Id</th>
                                                    <td>@job.NameCompany</td>
                                                    <td><img src="~/images/@job.LogoCompany" alt="@job.LogoCompany"
                                                            style="max-width: 100px; max-height: 100px;" /></td>
                                                    <td>@job.OfferTitle</td>
                                                    <td>@job.Description</td>
                                                    <td>@job.Salary</td>
                                                    <td>@job.Positions</td>
                                                    <td>@job.Status</td>
                                                    <td>@job.Country</td>
                                                    <td>@job.Languages</td>





                                                    <td>
                                                        <a asp-controller="Jobs" asp-action="Details"
                                                            asp-route-id="@job.Id" class="btn btn-primary">Details</a>
                                                        <a asp-controller="Jobs" asp-action="Edit"
                                                            asp-route-id="@job.Id" class="btn btn-warning">Edit</a>
                                                       <a asp-action="Delete" asp-route-id="@job.Id" class="btn btn-danger">Eliminar</a>

                                                    </td>
                                                </tr>
                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>