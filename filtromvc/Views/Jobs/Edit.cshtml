
@model Job
@{
    ViewData["Title"] = "Home Page";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="agregarProductoModalLabel">Agregar Producto</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form asp-action="Edit"  method="post" asp-controller="Jobs">
               
                <div class="form-group">
                    <label asp-for="NameCompany" class="control-label"></label>
                    <input asp-for="NameCompany" class="form-control" value="@Model.NameCompany"/>
                 
                </div>
                
                
                <div class="form-group">
                    <label asp-for="OfferTitle" class="control-label"></label>
                    <input asp-for="OfferTitle" class="form-control" value="@Model.OfferTitle"/>
                   
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" value="@Model.Country"/>
                  
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" value="@Model.Salary"/>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <label asp-for="Positions" class="control-label"></label>
                    <input asp-for="Positions" class="form-control" value="@Model.Positions"/>
                   
                </div>
                <div class="form-group">
                    <label asp-for="Languages" class="control-label"></label>
                    <input asp-for="Languages" class="form-control" value="@Model.Languages"/>
                   
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" value="@Model.Status"/>
                   
                </div>
                
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description"/>
                   
                </div>
                   <div class="form-group">
                    <label asp-for="LogoCompany" class="control-label"></label>
                    <input asp-for="LogoCompany" class="form-control" value="@Model.LogoCompany"/>
                   
                </div>
                       <div class="modal-footer">
                    <a asp-controller="Product" asp-action="index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>